<div class="container-fluid">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-12 col-md-3 text-center mb-4">
      <img src='/img/mainlogo.png' alt="Logo" class="img-fluid" style="max-width: 130px; height: auto;">
      <h1 class="hello">Welcome, <%= name %>!</h1>
      <h4 class="capping">Let's get capping!</h4>
    </div>
    <div class="col-12 col-md-6 mb-4">
      <!-- new -->
      <div class="card text-center border">
        <h5 class="card-header">Dashboard</h5>
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active text-success" aria-current="true" href="#">Day</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-success" href="#">Week</a>
            </li>
            <li class="nav-item">
